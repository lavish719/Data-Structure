#include <iostream>
using namespace std;

int binarysearch(int arr[], int size, int key)
{
    int s = 0, e = size - 1;
    
    while (s <= e)
    {
        int mid = (s + e) / 2; 
        
        if (arr[mid] == key)
        {
            return mid;
        }
        else if (arr[mid] < key)
        {
            s = mid + 1;
        }
        else
        {
            e = mid - 1;
        }
    }
    return -1; 
}

int main()
{
    int even[] = {1, 2, 3, 4, 5, 6};
    int odd[] = {11, 22, 33, 44, 55};
    
    int index = binarysearch(even, 6, 4);
    cout << "index:" << index;
}
